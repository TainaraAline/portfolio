---
import ghIcon from "../assets/icons/github.svg";
import bhIcon from "../assets/icons/behance.svg";
import lkIcon from "../assets/icons/linkedin.svg";
---

<aside class="social-sidebar">
  <a
    href="https://github.com/TainaraAline"
    target="_blank"
    class="social-sidebar__link"
  >
    <img class="social-sidebar__icon" src={ghIcon.src} alt="Github" />
  </a>
  <a
    href="https://www.behance.net/tainaramlima"
    target="_blank"
    class="social-sidebar__link"
  >
    <img class="social-sidebar__icon" src={bhIcon.src} alt="Behance" />
  </a>
  <a
    href="https://www.linkedin.com/in/tainarasb/"
    target="_blank"
    class="social-sidebar__link"
  >
    <img class="social-sidebar__icon" src={lkIcon.src} alt="LinkedIn" />
  </a>
</aside>

<style lang="scss">
  .social-sidebar {
    position: fixed;
    min-height: 80vh;
    right: 3rem;
    top: 10vh;
    background-color: var(--color-secondary);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 8vh;
    border-radius: 3rem;
    padding: 1rem;

    &__link:link,
    &__link:visited {
      text-decoration: none;
      cursor: pointer;
      transition: transform 0.4s ease;
    }

    &__link:hover {
      animation: alternate 0.6s ease infinite floating;
    }

    &__icon {
      height: 5rem;
      width: auto;
    }
  }
</style>
