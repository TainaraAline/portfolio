---
import { Image } from "astro:assets";

const { cover, title, path } = Astro.props;
---

<a href={path} class="banner">
  <span class="banner__title">{title}</span>
  <Image class="banner__cover" src={cover} alt={title} />
</a>

<style lang="scss">
  .banner {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-decoration: none;
    color: currentColor;
    cursor: pointer;
    width: max-content;

    &__title {
      font-size: 4rem;
      font-weight: 300;
    }

    &__cover {
      width: 50rem;
      height: 40vh;
      object-fit: cover;
    }
  }
</style>
